<Application x:Class="FamilyFinance.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Presentation/MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="DarkBlueBackGround">#FF293955</SolidColorBrush>
        <SolidColorBrush x:Key="AltRowSemiTransBlueBrush">#1B29399D</SolidColorBrush>
        <LinearGradientBrush x:Key="LightBlueMenuBackground" EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FFCAD3E2" Offset="0" />
            <GradientStop Color="#FFB1BCCF" Offset="1" />
        </LinearGradientBrush>
        <Style x:Key="RightAlignStyle" TargetType="{x:Type TextBlock}">
            <Setter Property="TextAlignment" Value="Right" />
        </Style>
    </Application.Resources>
</Application>
